    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch SavannaVulkan (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/bin/SavannaVulkanRenderer.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },

        {
            "name": "Generate Projects",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}\\build.ps1",
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "Generate Artifacts",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}\\unpack-artifacts.ps1",
            "cwd": "${workspaceFolder}"
        },
    ]
}
